<div class="modal">
<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button"
              class="close"
              data-dismiss="modal"
              {{action "cancel"}} aria-label="Close">
        <span aria-hidden="true">Ã—</span></button>
      <h4 class="modal-title">
        {{yield}}
      </h4>
    </div>
    <div class="modal-body">
      {{#em-form model=model submitButton=false}}
        {{em-input label="First Name" property="firstName"}}
        {{em-input label="Last Name" property="lastName"}}
        {{em-input label="Phone" property="phone"}}
        {{em-text label="Comments" property="comments"}}
        {{em-select label="User" property="user" content=users
            propertyIsModel=true prompt=" " optionLabelPath="email"}}
        {{em-select label="Course" property="course" content=courses
            propertyIsModel=true prompt=" " optionLabelPath="name"}}
      {{/em-form}}
    </div>
    <div class="modal-footer">
      <button type="button"
              class="btn btn-default pull-left"
              {{action "cancel"}}
              data-dismiss="modal">Close</button>
      <button type="button"
              class="btn btn-primary"
              {{action "submit"}}>Save changes</button>
    </div>
  </div>
  <!-- /.modal-content -->
</div>
<!-- /.modal-dialog -->
</div>
<!-- /.modal -->

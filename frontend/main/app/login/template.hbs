<div class="login-box">
  <div class="login-logo">
    <b>Admin</b>LTE
  </div>
  <!-- /.login-logo -->
  <div class="login-box-body">
    <p class="login-box-msg">Sign in to start your session</p>

    {{#em-form model=model submitButton=false}}
      {{#if model.errors.length}}
        {{#each model.errors as |error|}}
          {{error}}
        {{/each}}
      {{/if}}
      {{em-input label="Email" cid="email" property="email"}}
      {{em-input model=model label="Password" cid="password" property="password" type="password"}}
      <div class="row">
        <div class="col-xs-8">
          {{#link-to 'reset_password'}}Password forgotten{{/link-to}}
        </div>
        <div class="col-xs-4 pull-right">
          <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
        </div>
      </div>
    {{/em-form}}


  </div>
  <!-- /.login-box-body -->
</div>
